<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/mWorkoutPlanButton"
        android:layout_width="350dp"
        android:layout_height="135dp"
        android:layout_marginTop="75dp"
        android:text="Workout Plan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/mMealPlanButton"
        android:layout_width="350dp"
        android:layout_height="135dp"
        android:layout_marginTop="10dp"
        android:text="Meal Plan"
        app:layout_constraintEnd_toEndOf="@+id/mWorkoutPlanButton"
        app:layout_constraintTop_toBottomOf="@+id/mWorkoutPlanButton" />

    <Button
        android:id="@+id/mHealthScienceButton"
        android:layout_width="350dp"
        android:layout_height="135dp"
        android:layout_marginTop="10dp"
        android:text="Health Science"
        app:layout_constraintEnd_toEndOf="@+id/mMealPlanButton"
        app:layout_constraintTop_toBottomOf="@+id/mMealPlanButton" />

    <TextView
        android:id="@+id/mWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="75dp"
        android:text="Welcome"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp"
        android:text="Let's Begin Your Workout"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/mWelcome"
        app:layout_constraintTop_toBottomOf="@+id/mWelcome" />

</androidx.constraintlayout.widget.ConstraintLayout>