<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lpLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/andika_new_basic"
        android:text="Login"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lpEmailAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lpLogin" />

    <EditText
        android:id="@+id/lpPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="@+id/lpEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/lpEmailAddress" />

    <Button
        android:id="@+id/lpForgotPassButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Forgot Password?"
        app:layout_constraintEnd_toEndOf="@+id/lpPassword"
        app:layout_constraintTop_toBottomOf="@+id/lpPassword" />

    <Button
        android:id="@+id/lpLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Log in"
        app:layout_constraintEnd_toEndOf="@+id/lpLogin"
        app:layout_constraintStart_toStartOf="@+id/lpLogin"
        app:layout_constraintTop_toBottomOf="@+id/lpForgotPassButton" />

    <Button
        android:id="@+id/lpSignupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Sign up"
        app:layout_constraintEnd_toEndOf="@+id/lpLoginButton"
        app:layout_constraintStart_toStartOf="@+id/lpLoginButton"
        app:layout_constraintTop_toBottomOf="@+id/lpLoginButton" />

    <ImageView
        android:id="@+id/lpEmailImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/lpEmailAddress"
        app:layout_constraintEnd_toStartOf="@+id/lpEmailAddress"
        app:layout_constraintTop_toTopOf="@+id/lpEmailAddress"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <ImageView
        android:id="@+id/lpLockImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/lpPassword"
        app:layout_constraintEnd_toStartOf="@+id/lpPassword"
        app:layout_constraintTop_toTopOf="@+id/lpPassword"
        app:srcCompat="@android:drawable/ic_lock_idle_lock" />

    <TextView
        android:id="@+id/lpOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        app:layout_constraintBottom_toTopOf="@+id/lpSignupButton"
        app:layout_constraintEnd_toEndOf="@+id/lpLoginButton"
        app:layout_constraintStart_toStartOf="@+id/lpLoginButton"
        app:layout_constraintTop_toBottomOf="@+id/lpLoginButton" />

</androidx.constraintlayout.widget.ConstraintLayout>