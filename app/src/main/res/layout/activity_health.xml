<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/healthactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Health.HealthActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/healthsLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physical Health"
            tools:layout_editor_absoluteX="-9dp"
            tools:layout_editor_absoluteY="102dp" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mental Health"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="148dp" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/healthpager"
        android:layout_width="409dp"
        android:layout_height="609dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthsLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>